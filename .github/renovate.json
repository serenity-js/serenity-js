{
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":prHourlyLimit2",
    ":prConcurrentLimit20",
    "group:monorepos",
    "group:recommended",
    "workarounds:typesNodeVersioning",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "packageRules": [
    {
      "groupName": "Core dependencies",
      "labels": [
        "@serenity-js/core"
      ],
      "matchPackageNames": [
        "/@paralleldrive/cuid2/",
        "/@types/diff/",
        "/@types/filenamify/",
        "/@types/validate-npm-package-name/",
        "/assertion-error-formatter/",
        "/diff/",
        "/error-stack-parser/",
        "/fast-glob/",
        "/filenamify/",
        "/graceful-fs/",
        "/moment/",
        "/upath/",
        "/validate-npm-package-name/"
      ]
    },
    {
      "groupName": "Cucumber",
      "labels": [
        "@serenity-js/cucumber"
      ],
      "matchFileNames": [
        "examples/cucumber-*/**",
        "integration/*-cucumber/**",
        "integration/cucumber-11/**",
        "packages/cucumber/**"
      ],
      "matchPackageNames": [
        "/^@cucumber/",
        "/cli-table3/",
        "/gherkin/"
      ]
    },
    {
      "groupName": "Cucumber legacy (ignored)",
      "labels": [
        "@serenity-js/cucumber"
      ],
      "matchFileNames": [
        "integration/cucumber-1/**",
        "integration/cucumber-2/**",
        "integration/cucumber-3/**",
        "integration/cucumber-4/**",
        "integration/cucumber-5/**",
        "integration/cucumber-6/**",
        "integration/cucumber-7/**",
        "integration/cucumber-8-javascript-api/**",
        "integration/cucumber-8-legacy-api/**",
        "integration/cucumber-9/**",
        "integration/cucumber-10/**"
      ],
      "matchPackageNames": [
        "/^@cucumber/",
        "/^cucumber"
      ],
      "enabled": false
    },
    {
      "groupName": "Local Server dependencies",
      "labels": [
        "@serenity-js/local-server"
      ],
      "matchPackageNames": [
        "/http-shutdown/",
        "/portfinder/",
        "/@hapi/hapi/",
        "/@types/hapi/",
        "/@types/restify/",
        "/koa/",
        "/restify/"
      ]
    },
    {
      "groupName": "Playwright dependencies",
      "labels": [
        "@serenity-js/playwright",
        "@serenity-js/web"
      ],
      "matchPackageNames": [
        "/playwright/",
        "/playwright-core/",
        "/^@playwright/"
      ]
    },
    {
      "groupName": "Protractor dependencies",
      "labels": [
        "@serenity-js/protractor",
        "@serenity-js/web"
      ],
      "matchPackageNames": [
        "/@types/html-minifier/",
        "/@types/selenium-webdriver/",
        "/body-parser/",
        "/html-minifier/",
        "/protractor/",
        "/query-selector-shadow-dom/",
        "/selenium-webdriver/"
      ]
    },
    {
      "groupName": "REST dependencies",
      "labels": [
        "@serenity-js/rest"
      ],
      "matchPackageNames": [
        "/agent-base/",
        "/axios/",
        "/http-proxy-agent/",
        "/https-proxy-agent/",
        "/lru-cache/",
        "/proxy-from-env/"
      ]
    },
    {
      "groupName": "WebdriverIO 8 dependencies",
      "labels": [
        "@serenity-js/webdriverio",
        "@serenity-js/web"
      ],
      "matchFileNames": [
        "packages/webdriverio-8/**",
        "integration/webdriverio-8-*/**"
      ],
      "matchPackageNames": [
        "/^@wdio/",
        "/^webdriverio/"
      ],
      "allowedVersions": "< 9"
    },
    {
      "groupName": "WebdriverIO 8 Devtools dependencies",
      "labels": [
        "@serenity-js/webdriverio",
        "@serenity-js/web"
      ],
      "matchFileNames": [
        "packages/webdriverio-8/**",
        "integration/webdriverio-8-*/**"
      ],
      "matchPackageNames": [
        "/devtools/",
        "/puppeteer-core/"
      ]
    },
    {
      "groupName": "WebdriverIO dependencies",
      "labels": [
        "@serenity-js/webdriverio",
        "@serenity-js/web"
      ],
      "matchFileNames": [
        "packages/webdriverio/**",
        "integration/webdriverio-*/**",
        "examples/webdriverio-*/**"
      ],
      "matchPackageNames": [
        "/^@wdio/",
        "/^webdriverio/"
      ],
      "allowedVersions": "^9"
    },
    {
      "groupName": "Serenity BDD dependencies",
      "labels": [
        "@serenity-js/serenity-bdd"
      ],
      "matchPackageNames": [
        "/@types/progress/",
        "/find-java-home/",
        "/https-proxy-agent/",
        "/if-env/",
        "/progress/",
        "/which/",
        "/yargs/"
      ]
    },
    {
      "groupName": "TypeScript dependencies",
      "matchPackageNames": [
        "/^ts-node$/",
        "/^typescript$/"
      ]
    },
    {
      "groupName": "ESLint dependencies",
      "matchPackageNames": [
        "/^eslint$/",
        "/^eslint-plugin/",
        "/^@typescript-eslint/"
      ]
    },
    {
      "groupName": "Common development tools",
      "matchPackageNames": [
        "/@commitlint/cli/",
        "/@commitlint/config-conventional/",
        "/@puppeteer/browsers/",
        "/@types/chai-as-promised/",
        "/@types/istanbul-lib-coverage/",
        "/@types/sinon/",
        "/@types/sinon-chai/",
        "/chai-as-promised/",
        "/coveralls/",
        "/cz-conventional-changelog/",
        "/cz-customizable/",
        "/husky/",
        "/istanbul-lib-coverage/",
        "/mocha-testdata/",
        "/rimraf/",
        "/sinon/",
        "/sinon-chai/"
      ]
    },
    {
      "groupName": "Internal dependencies (ignored)",
      "enabled": false,
      "matchPackageNames": [
        "/^@examples//",
        "/^@integration//",
        "/^@serenity-js//"
      ]
    },
    {
      "groupName": "GitHub Actions",
      "matchPackageNames": [
        "/^actions//",
        "/^tj-actions//",
        "/^github/codeql-action$/",
        "/^mattraks/delete-workflow-runs$/",
        "/^qltysh/qlty-action/coverage$/"
      ]
    }
  ],
  "schedule": [
    "after 3am",
    "before 9am"
  ]
}
