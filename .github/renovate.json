{
  "extends": [
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    ":autodetectPinVersions",
    ":prHourlyLimit2",
    ":prConcurrentLimit20",
    "group:monorepos",
    "group:recommended",
    "workarounds:typesNodeVersioning",
    "workarounds:reduceRepologyServerLoad",
    "helpers:disableTypesNodeMajor",
    "helpers:pinGitHubActionDigests"
  ],
  "rangeStrategy": "bump",
  "ignorePaths": [
    "**/node_modules/**"
  ],
  "packageRules": [
    {
      "groupName": "Core dependencies",
      "labels": [
        "@serenity-js/core"
      ],
      "packagePatterns": [
        "@paralleldrive/cuid2",
        "@types/diff",
        "@types/filenamify",
        "@types/validate-npm-package-name",
        "assertion-error-formatter",
        "diff",
        "error-stack-parser",
        "fast-glob",
        "filenamify",
        "graceful-fs",
        "moment",
        "upath",
        "validate-npm-package-name"
      ]
    },
    {
      "groupName": "Cucumber",
      "labels": [
        "@serenity-js/cucumber"
      ],
      "packagePatterns": [
        "^@cucumber",
        "cli-table3",
        "gherkin"
      ]
    },
    {
      "groupName": "Local Server dependencies",
      "labels": [
        "@serenity-js/local-server"
      ],
      "packagePatterns": [
        "http-shutdown",
        "portfinder",
        "@hapi/hapi",
        "@types/hapi",
        "@types/restify",
        "koa",
        "restify"
      ]
    },
    {
      "groupName": "Playwright dependencies",
      "labels": [
        "@serenity-js/playwright",
        "@serenity-js/web"
      ],
      "packagePatterns": [
        "playwright",
        "playwright-core",
        "^@playwright"
      ]
    },
    {
      "groupName": "Protractor dependencies",
      "labels": [
        "@serenity-js/protractor",
        "@serenity-js/web"
      ],
      "packagePatterns": [
        "@types/html-minifier",
        "@types/selenium-webdriver",
        "body-parser",
        "html-minifier",
        "protractor",
        "query-selector-shadow-dom",
        "selenium-webdriver"
      ]
    },
    {
      "groupName": "REST dependencies",
      "labels": [
        "@serenity-js/rest"
      ],
      "packagePatterns": [
        "agent-base",
        "axios",
        "http-proxy-agent",
        "https-proxy-agent",
        "lru-cache",
        "proxy-from-env"
      ]
    },
    {
      "groupName": "WebdriverIO dependencies",
      "labels": [
        "@serenity-js/webdriverio",
        "@serenity-js/web"
      ],
      "packagePatterns": [
        "^@wdio",
        "^webdriverio",
        "devtools",
        "puppeteer-core"
      ]
    },
    {
      "groupName": "Serenity BDD dependencies",
      "labels": [
        "@serenity-js/serenity-bdd"
      ],
      "packagePatterns": [
        "@types/progress",
        "find-java-home",
        "https-proxy-agent",
        "if-env",
        "progress",
        "which",
        "yargs"
      ]
    },
    {
      "groupName": "TypeScript dependencies",
      "packagePatterns": [
        "^tsx",
        "^typescript$"
      ]
    },
    {
      "groupName": "ESLint dependencies",
      "packagePatterns": [
        "^eslint$",
        "^eslint-plugin",
        "^@typescript-eslint"
      ]
    },
    {
      "groupName": "Common development tools",
      "packagePatterns": [
        "@commitlint/cli",
        "@commitlint/config-conventional",
        "@types/chai-as-promised",
        "@types/istanbul-lib-coverage",
        "@types/sinon",
        "@types/sinon-chai",
        "chai-as-promised",
        "^chromedriver$",
        "coveralls",
        "cz-conventional-changelog",
        "cz-customizable",
        "husky",
        "istanbul-lib-coverage",
        "mocha-testdata",
        "rimraf",
        "sinon",
        "sinon-chai"
      ]
    },
    {
      "groupName": "Internal dependencies (ignored)",
      "packagePatterns": [
        "^@examples/",
        "^@integration/",
        "^@serenity-js/"
      ],
      "enabled": false
    },
    {
      "groupName": "GitHub Actions",
      "packagePatterns": [
        "^actions/",
        "^tj-actions/",
        "^github/codeql-action$",
        "^mattraks/delete-workflow-runs$",
        "^paambaati/codeclimate-action$"
      ]
    }
  ],
  "schedule": [
    "after 3am",
    "before 9am"
  ]
}
