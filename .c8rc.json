{
  "all": false,
  "cache": true,
  "sourceMap": true,
  "clean": true,
  "include": [
    "**/packages/*/src/**/*.ts",
    "**/packages/*/lib/**/*.js"
  ],
  "exclude": [
    "**/src/**/*.d.ts",
    "**/lib/**/*.d.ts",
    "**/spec/**"
  ],
  "extension": [
    ".ts",
    ".js"
  ],
  "reporter": [
    "lcovonly",
    "text-summary"
  ],
  "reporterOptions": {
    "lcov": {
      "projectRoot": "../../"
    },
    "lcovonly": {
      "projectRoot": "../../"
    }
  }
}
