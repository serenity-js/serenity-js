{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "loglevel": "verbose",
  "strict": true,
  "npmClient": "pnpm",
  "version": "3.31.14",
  "command": {
    "create": {
      "homepage": "https://serenity-js.org",
      "license": "Apache-2.0"
    },
    "publish": {
      "loglevel": "verbose"
    },
    "version": {
      "allowBranch": "main",
      "conventionalCommits": true,
      "createRelease": "github",
      "private": false,
      "exact": true,
      "message": "chore(release): %s\n[ci skip]",
      "loglevel": "verbose"
    }
  },
  "ignoreChanges": [
    "!packages/**/*.{js,json,md,ts}",
    "packages/**/spec/**"
  ]
}