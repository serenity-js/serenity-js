{
  "lerna": "3.22.1",
  "loglevel": "verbose",
  "hoist": true,
  "strict": true,
  "useWorkspaces": false,
  "nohoist": [
    "@types/jasmine",
    "@types/mocha",
    "@types/cucumber",
    "@cucumber/create-meta",
    "@cucumber/cucumber",
    "@cucumber/messages",
    "@wdio/*",
    "webdriverio",
    "cucumber",
    "jasmine",
    "mocha",
    "protractor",
    "selenium-webdriver"
  ],
  "packages": [
    "documentation/**",
    "examples/**",
    "integration/**",
    "packages/**"
  ],
  "version": "2.31.1",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--prefer-offline", "--no-audit"]
    },
    "create": {
      "homepage": "https://serenity-js.org",
      "license": "Apache-2.0"
    },
    "publish": {
      "loglevel": "verbose"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "private": false,
      "exact": true,
      "message": "chore(release): %s\n[ci skip]",
      "loglevel": "verbose"
    }
  },
  "ignoreChanges": [
    "./.eslintrc.js",
    "./.esdoc.js",
    "./.esdoc-patches.js",
    "./.mocharc.yml",
    "./.npmignore",
    "./.nvmrc",
    "./gh-pages.js",
    "./Makefile",
    "**/*.md",
    "**/spec/**",
    "./package.json",
    "./.github/**"
  ]
}
