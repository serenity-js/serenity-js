{
  "lerna": "3.22.1",
  "loglevel": "verbose",
  "hoist": false,
  "strict": true,
  "useWorkspaces": false,
  "packages": [
    "documentation/**",
    "examples/**",
    "integration/**",
    "packages/**"
  ],
  "version": "2.30.1",
  "command": {
    "create": {
      "homepage": "https://serenity-js.org",
      "license": "Apache-2.0"
    },
    "publish": {
      "loglevel": "verbose"
    },
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "createRelease": "github",
      "private": false,
      "exact": true,
      "message": "chore(release): %s\n[ci skip]",
      "loglevel": "verbose"
    }
  },
  "ignoreChanges": [
    "./.eslintrc.js",
    "./.esdoc.js",
    "./.esdoc-patches.js",
    "./.mocharc.yml",
    "./.npmignore",
    "./.nvmrc",
    "./gh-pages.js",
    "./Makefile",
    "**/*.md",
    "**/spec/**",
    "./package.json",
    "./.github/**"
  ]
}
