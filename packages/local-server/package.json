    "koa": "^2.14.2",
    "mocha": "^10.2.0",
    "mocha-multi": "^1.1.7",
    "restify": "^11.1.0",
    "semver": "^7.5.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
