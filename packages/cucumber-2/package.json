{
  "name": "@serenity-js/cucumber-2",
  "version": "1.3.0",
  "description": "Enables Serenity/JS to run Cucumber 2 test scenarios",
  "author": "Jan Molak <jan.molak@smartcodeltd.co.uk>",
  "homepage": "http://serenity-js.org",
  "license": "Apache-2.0",
  "config": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "serenity-js",
    "cucumber",
    "tdd",
    "bdd",
    "test",
    "selenium",
    "webdriverjs",
    "webdriver",
    "testing"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project=tsconfig.json --config=../../tslint.json --format=prose",
    "test": "nyc --report-dir=./staging/reports/coverage mocha --opts ./mocha.opts 'spec/**/*.spec.*'",
    "package": "tsc --project tsconfig.json",
    "verify": "npm run clean && npm run lint && npm test && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-molak/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/jan-molak/serenity-js/issues"
  },
  "engines": {
    "node": ">= 6.9.x",
    "npm": ">= 3"
  },
  "peerDependencies": {
    "cucumber": "2.0.0-rc.9"
  },
  "devDependencies": {
    "@serenity-js/devtools": "*",
    "@types/cucumber": "2.0.0",
    "@types/glob": "5.0.30",
    "@types/lodash": "4.14.55",
    "cucumber": "2.0.0-rc.9"
  },
  "dependencies": {
    "@serenity-js/core": "^1.1.0",
    "glob": "7.1.1",
    "lodash": "4.17.4"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "features",
      "lib",
      "node_modules",
      "spec",
      "staging"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "text-summary",
      "html"
    ],
    "cache": true,
    "all": true
  }
}
