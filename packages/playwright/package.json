{
  "name": "@serenity-js/playwright",
  "version": "2.29.6",
  "description": "Test your web apps with Serenity/JS and Playwright",
  "keywords": [
    "serenity-js",
    "playwright",
    "ui",
    "frontend",
    "angular",
    "react",
    "vue",
    "bdd",
    "tdd",
    "test",
    "testing"
  ],
  "author": "Nikita Chursin <chursinn91@gmail.com>",
  "homepage": "https://serenity-js.org/",
  "license": "Apache-2.0",
  "main": "lib/index.js",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git"
  },
  "scripts": {
    "test": "nyc --report-dir ../../target/coverage/playwright mocha --config ../../.mocharc.yml 'spec/**/*.spec.*'",
    "clean": "rimraf .nyc_output lib target",
    "lint": "eslint --ext ts --config ./.eslintrc.js .",
    "lint:fix": "npm run lint -- --fix",
    "debug": "node --inspect-brk node_modules/.bin/protractor ./spec/protractor.conf.js",
    "compile": "tsc --project tsconfig.json",
    "site": "esdoc -c .esdoc.js",
    "tdd": "mocha  --config ../../.mocharc.yml --watch-extensions ts --watch-files src/**/*,spec/**/* --watch $(git status --short | sed s/^...// | grep \\.spec\\.ts | paste -sd ',' -)"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "dependencies": {
    "@serenity-js/assertions": "^2.29.6",
    "@serenity-js/core": "^2.29.6",
    "@types/chai": "^4.2.21",
    "playwright": "^1.12.3",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "devDependencies": {
    "@types/chai": "^4.2.21",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^8.2.3",
    "mocha": "^9.0.2",
    "@types/jsforce": "^1.9.33",
    "@types/node": "^14.17.6",
    "@types/sinon": "^10.0.2",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-exclude": "^2.0.3",
    "sinon": "^11.1.1",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.1.0",
    "tslib": "^2.3.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5"
  }
}