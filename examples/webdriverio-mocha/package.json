{
  "name": "@examples/webdriverio-mocha",
  "version": "3.0.0",
  "description": "Example implementation of a test suite using WebdriverIO and Mocha",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "homepage": "https://serenity-js.org",
  "license": "Apache-2.0",
  "private": true,
  "config": {
    "access": "private"
  },
  "scripts": {
    "clean": "rimraf target",
    "test:update-serenity": "serenity-bdd update --ignoreSSL",
    "test:acceptance": "wdio wdio.conf.ts",
    "test:report": "serenity-bdd run --features=test/spec",
    "test": "failsafe clean test:update-serenity test:acceptance test:report",
    "verify": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "engines": {
    "node": "^16.13 || ^18.12 || ^20"
  },
  "devDependencies": {
    "@serenity-js/console-reporter": "^3.0.0",
    "@serenity-js/core": "^3.0.0",
    "@serenity-js/mocha": "^3.0.0",
    "@serenity-js/webdriverio": "^3.0.0",
    "@serenity-js/serenity-bdd": "^3.0.0",
    "@wdio/cli": "8.36.0",
    "@wdio/globals": "8.36.0",
    "@wdio/local-runner": "8.36.0",
    "@wdio/spec-reporter": "8.36.0",
    "@wdio/reporter": "8.36.0",
    "@types/mocha": "10.0.6",
    "mocha": "10.4.0",
    "npm-failsafe": "1.2.1",
    "webdriverio": "8.36.0",
    "ts-node": "10.9.2",
    "typescript": "5.2.2"
  }
}
